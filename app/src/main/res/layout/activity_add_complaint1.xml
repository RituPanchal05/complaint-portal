<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="90dp"
    tools:context=".Add_complaint1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/clg_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:text="User id :"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/clg_eno"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="220173116013"
            android:textSize="20dp"
            android:textStyle="bold" />


        <!-- Add margin start to the second TextView -->

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/cat_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department id :"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/dept_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold" />


        <!-- Add margin start to the second TextView -->

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/edu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Administrative_Issues"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addComp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add Complaint"
                android:textSize="20dp"
                android:required="true"/>

            <!-- Your CardView content goes here -->

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancleButton"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:text="Cancel"
            android:textSize="18dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="Save"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            app:cornerRadius="20dp" />

    </LinearLayout>

</LinearLayout>